
<br>


<table class="table table-bordered">

  <tbody>
    <% @lists.each do |list| %>

      <% if list.completed %>
      <tr class="bg-secondary">
        <td class="striker"><%= link_to list.description, edit_list_path(list), class: "no-un text-light" %><% list.description %></td>
        <td>
        <%= form_with(model: list) do |form| %>
            <%= form.text_field :description, type: 'hidden' %>
            <%= form.check_box :completed, :checked => false, :style => "visibility: hidden" %>
            <%= form.submit "Uncheck",  class: "no-un btn btn-outline-secondary btn-light" %>
        <% end %></td>
        <td class="text-center"><% link_to 'Show', list %>
          <% link_to 'Edit', edit_list_path(list) %>
          <%= button_to 'Delete', list,  class: "no-un btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% else %>
      <tr>
        <td><%= link_to list.description, edit_list_path(list), class: "no-un" %><% list.description %></td>
        <td>
        <%= form_with(model: list) do |form| %>
            <%= form.text_field :description, type: 'hidden' %>
            <%= form.check_box :completed, :checked => true, :style => "visibility: hidden" %>
            <%= form.submit "Check Off", class: "btn btn-outline-secondary" %>
        <% end %>
        </td>
        <td class="text-center"><% link_to 'Show', list %>
          <% link_to 'Edit', edit_list_path(list) %>
          <%= button_to 'Delete', list,  class: "no-un btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

